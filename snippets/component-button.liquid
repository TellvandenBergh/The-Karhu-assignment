{%- style -%}
  .component-button-{{id}} {
    color: {{text_color}};
    border-color: {{button_color}}60;
    {%-if button_transparent -%}
    background-color: transparent;
    {% else %}
    background-color: {{button_color}};
    {% endif %}
  }
  .component-button-{{id}}:hover {
    {%-if button_transparent -%}
    background-color: {{button_color}}40;
    border-color: transparent;
    {% else %}
    background-color: transparent;
    color: {{button_color}};
    {% endif %}
  }
{%- endstyle -%}
<a class="component-button component-button-{{id}}" href="{{link}}">{{label}}</a>